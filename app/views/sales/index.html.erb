<h1>Listing sales</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Employeeid</th>
    <th>Photo</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.name %></td>
    <td><%= sale.employeeid %></td>
    <td><%= sale.photo %></td>
    <td><%= sale.phone %></td>
    <td><%= link_to 'Show', sale %></td>
    <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
    <td><%= link_to 'Destroy', sale, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

