<div id="tableheader">
<h1>Listing positions</h1>
</div>

<table>
  <tr>
    <th>Salesman</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @positions.each do |position| %>
  <tr>
    <td><%= position.salesman_id %></td>
    <td><%= position.longitude %></td>
    <td><%= position.latitude %></td>
    <td><%= link_to 'Show', position, :class=>"buttons" %></td>
    <td><%= link_to 'Edit', edit_position_path(position), :class=>"buttons" %></td>
    <td><%= link_to 'Destroy', position, confirm: 'Are you sure?', method: :delete, :class=>"buttons" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Position', new_position_path, :class=>"buttons" %>
