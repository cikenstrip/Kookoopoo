<div id="tableheader">
<h1>Manage Customers</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Category</th>
    <th>Phone</th>
    <th>Manage</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.address %></td>
    <td><%= customer.category %></td>
    <td><%= customer.phone %></td>
    <td>
    <%= link_to 'Show', customer, :class=>'buttons' %>
    <%= link_to 'Edit', edit_customer_path(customer), :class=>'buttons' %>
    <%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete, :class=>'buttons' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Customer', new_customer_path, :class=>'buttons' %>
