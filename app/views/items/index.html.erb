<div id="tableheader">
<h1>Listing items</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Unit</th>
    <th>Price</th>
    <th>Code</th>
    <th>Manage</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= item.unit %></td>
    <td><%= item.price %></td>
    <td><%= item.code %></td>
    <td>
    <%= link_to 'Show', item %>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
