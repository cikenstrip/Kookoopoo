<h1>Manage Sales Force</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Employeeid</th>
    <th>Phone</th>
    <th>Manage</th>
  </tr>

<% @salesmen.each do |salesman| %>
  <tr>
    <td><%= salesman.name %></td>
    <td><%= salesman.employeeid %></td>
    <td><%= salesman.phone %></td>
    <td>
    <%= link_to 'Show', salesman %>
    <%= link_to 'Edit', edit_salesman_path(salesman) %>
    <%= link_to 'Destroy', salesman, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Salesman', new_salesman_path %>
