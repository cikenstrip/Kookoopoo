<div id="tableheader">
<h1>Listing purchaseorders</h1>
</div>

<table>
  <tr>
    <th>Purchasedate</th>
    <th>Purchasenumber</th>
    <th>Customer</th>
	<th>Salesmen</th>
    <th>Manage</th>
    <th></th>
    <th></th>
  </tr>

<% @purchaseorders.each do |purchaseorder| %>
  <tr>
    <td><%= purchaseorder.purchasedate %></td>
    <td><%= purchaseorder.purchasenumber %></td>
    <td><%= Customer.find(purchaseorder.customer_id).name %></td>
	<td><%= Salesman.find(purchaseorder.salesmen_id).name %></td>
    <td><%= link_to 'Show', purchaseorder, :class=>'buttons' %></td>
    <td><%= link_to 'Edit', edit_purchaseorder_path(purchaseorder), :class=>'buttons' %></td>
    <td><%= link_to 'Destroy', purchaseorder, confirm: 'Are you sure?', method: :delete, :class=>'buttons' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Purchaseorder', new_purchaseorder_path, :class=>'buttons' %>
